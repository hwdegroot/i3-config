# Pulse Audio controls
bindsym XF86AudioLowerVolume exec pactl set-sink-volume $(pactl list short | grep RUNNING | head -1 | cut -f1) '-5%'
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume $(pactl list short | grep RUNNING | head -1 | cut -f1) '+5%'
bindsym XF86AudioMute exec pactl set-sink-mute $(pactl list short | grep RUNNING | head -1 | cut -f1) toggle # (un)mute sound
## Keyboard
bindsym $mod+F3 exec pactl set-sink-volume $(pactl list short | grep RUNNING | head -1 | cut -f1) '-5%'
bindsym $mod+F2 exec pactl set-sink-volume $(pactl list short | grep RUNNING | head -1 | cut -f1) '+5%'
bindsym $mod+F1 exec pactl set-sink-mute $(pactl list short | grep RUNNING | head -1 | cut -f1) toggle # (un)mute sound
bindsym $mod+Shift+F1 exec pavucontrol

# Media player controls
## Bluetooth HeadSet
bindsym XF86AudioPlay exec playerctl --player $(playerctl --list-all | head -1) play
bindsym XF86AudioPause exec playerctl --player $(playerctl --list-all | head -1) pause
bindsym XF86AudioNext exec playerctl --player $(playerctl --list-all | head -1) next
bindsym XF86AudioPrev exec playerctl --player $(playerctl --list-all | head -1) previous
## Keyboard
bindsym $mod+F6 exec playerctl --player $(playerctl --list-all | head -1) play-pause
bindsym $mod+F7 exec playerctl --player $(playerctl --list-all | head -1) next
bindsym $mod+F5 exec playerctl --player $(playerctl --list-all | head -1) previous
# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

